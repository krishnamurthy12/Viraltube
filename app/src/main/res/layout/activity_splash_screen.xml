<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBlue"
    tools:context="com.viraltubesolutions.viraltubeapp.SplashScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/splash_screen_image"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true"
        >
        <com.viraltubesolutions.viraltubeapp.customs.MyCustomTextView
            android:id="@+id/text_vital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_viral"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="45sp"
            android:background="@color/appBlue"
            android:textColor="@color/colorwhite"
            android:textStyle="bold"
            />
        <com.viraltubesolutions.viraltubeapp.customs.MyCustomTextView
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/text_tube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_tube"
            android:textSize="45sp"
            android:layout_marginLeft="8dp"
            android:background="@color/colorwhite"
            android:textColor="@color/appBlue"
            android:textStyle="bold"
            />

    </LinearLayout>

</RelativeLayout>