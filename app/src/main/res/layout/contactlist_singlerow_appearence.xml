<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/contact_pic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:background="@drawable/rounded_image_design"/>
   <!-- <com.viraltubesolutions.viraltubeapp.customs.MyCustomTextView
        android:id="@+id/contact_pic"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:background="@drawable/rounded_image_design"/>-->
    <com.viraltubesolutions.viraltubeapp.customs.MyCustomTextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contact_pic"
        android:layout_toRightOf="@+id/contact_pic"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="@dimen/text_view_size_medium"
        android:layout_marginLeft="10dp"
        />
    <com.viraltubesolutions.viraltubeapp.customs.MyCustomTextView
        android:id="@+id/contact_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contact_pic"
        android:layout_alignLeft="@+id/contact_name"
        android:layout_below="@+id/contact_name"
        android:text="@string/mobile_number"
        android:textSize="@dimen/text_view_size_small"
        />

    <View
        android:layout_alignLeft="@+id/contact_number"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/contact_number"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/dark_gray"
        android:paddingLeft="50dp"
        />


</RelativeLayout>