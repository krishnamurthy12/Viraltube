<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:id="@+id/textview_layout"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:textColor="@color/colorwhite"
            android:gravity="center|start"
            android:textSize="@dimen/button_txt18sp"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:text="@string/please_provide_correct_details"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/textview_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.viraltubesolutions.viraltubeapp.customs.MyCustomEditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:background="@color/colorwhite"
        android:textSize="@dimen/edit_text_size"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:hint="@string/enter_name"
        android:inputType="text"
        android:textColorHint="@color/dark_gray"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"/>
        <com.viraltubesolutions.viraltubeapp.customs.MyCustomEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:background="@color/colorwhite"
            android:textColorHint="@color/dark_gray"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:hint="@string/enter_mobile_number"
            android:textSize="@dimen/edit_text_size"
            android:inputType="number"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_vertical_margin"/>
        <com.viraltubesolutions.viraltubeapp.customs.MyCustomEditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/colorwhite"
            android:gravity="start"
            android:textSize="@dimen/edit_text_size"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:inputType="text"
            android:textColorHint="@color/dark_gray"
            android:hint="@string/enter_adress"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_vertical_margin"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proceed_payment"
            android:textColor="@color/colorwhite"
            android:paddingLeft="@dimen/button_paddingLeft"
            android:paddingRight="@dimen/button_paddingRight"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="@color/accent"
            android:paddingStart="@dimen/button_paddingLeft"
            android:paddingEnd="@dimen/button_paddingRight" />
    </LinearLayout>

</RelativeLayout>